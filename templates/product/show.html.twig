            <div class="col-md-7">
                    <h3>{{product.name}}</h3>
                    <p> {{product.subtitle}} | {{product.articleCode}}</p>
                    <span class="product-price-page">{{ (product.price / 100)|number_format(2, ',','.')}}â‚¬</span>
